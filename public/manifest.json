{
  "short_name": "Price Tracker",
  "name": "Price Tracker",
  "version": "1.1",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts":  ["app/background.js"]
  },
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
   "128": "icon128.png" 
  },
  "browser_action": {},
  "content_scripts" : [
    {
      "matches": [ "<all_urls>" ],
      "css": ["/css/root.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "web_accessible_resources":[
    "/static/css/content.css", "/static/media/*"
  ],
  "permissions": [
    "tabs", 
    "identity", 
    "identity.email"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://apis.google.com sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk=; object-src 'self';"
}
